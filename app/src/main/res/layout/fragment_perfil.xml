<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sedentapp.sedentapp.sedentapp.ObjetivosFragment">

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="android:background=&quot;@android:color/darker_gray&quot;" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@color/colorPrimary" />

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile"
            android:layout_width="200dp"

            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:elevation="5dp"
            android:padding="20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/man"
            app:civ_border_color="#FFFFFFFF"
            app:civ_border_width="3dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView2"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:text="Nombre Apellido"
            android:textColor="@android:color/background_light"
            android:textSize="30sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/boton_edit"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignEnd="@+id/profile"
            android:layout_alignRight="@+id/profile"
            android:layout_alignTop="@+id/textView10"
            android:layout_marginEnd="17dp"
            android:layout_marginRight="17dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_edit_objetivo"
            android:tint="@android:color/darker_gray" />

        <ImageButton
            android:id="@+id/boton_edit2"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_above="@+id/textView2"
            android:layout_toEndOf="@+id/textView2"
            android:layout_toRightOf="@+id/textView2"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_edit_objetivo" />

        <ImageButton
            android:id="@+id/boton_edit6"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignLeft="@+id/boton_edit"
            android:layout_alignStart="@+id/boton_edit"
            android:layout_alignTop="@+id/textView9"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_edit_objetivo"
            android:tint="@android:color/darker_gray" />

        <ImageButton
            android:id="@+id/boton_edit4"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_above="@+id/textView7"
            android:layout_alignLeft="@+id/boton_edit"
            android:layout_alignStart="@+id/boton_edit"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_edit_objetivo"
            android:tint="@android:color/darker_gray" />

        <ImageButton
            android:id="@+id/boton_edit5"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignBottom="@+id/textView12"
            android:layout_alignLeft="@+id/boton_edit4"
            android:layout_alignStart="@+id/boton_edit4"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_edit_objetivo"
            android:tint="@android:color/darker_gray" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView2"
            android:layout_marginLeft="19dp"
            android:layout_marginStart="19dp"
            android:layout_marginTop="12dp"
            android:text="Datos personales:"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView3"
            android:layout_alignStart="@+id/textView3"
            android:layout_below="@+id/textView3"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="13dp"
            android:text="Edad:" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView4"
            android:layout_alignStart="@+id/textView4"
            android:layout_below="@+id/textView4"
            android:layout_marginTop="12dp"
            android:text="Estatura:" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView5"
            android:layout_alignStart="@+id/textView5"
            android:layout_below="@+id/textView5"
            android:layout_marginTop="14dp"
            android:text="Peso:" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView6"
            android:layout_alignStart="@+id/textView6"
            android:layout_below="@+id/textView6"
            android:layout_marginTop="14dp"
            android:text="Longitud de zancada:" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView3"
            android:layout_alignStart="@+id/textView3"
            android:layout_below="@+id/textView7"
            android:layout_marginTop="12dp"
            android:text="Redes sociales:"
            android:textStyle="bold" />

        <com.google.android.gms.common.SignInButton
            android:id="@+id/sign_in_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView3"
            android:layout_alignStart="@+id/textView3"
            android:layout_marginTop="450dp" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="150dp"
            android:layout_height="55dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/sign_in_button"
            android:layout_marginEnd="21dp"
            android:layout_marginRight="21dp"
            android:adjustViewBounds="false"
            android:cropToPadding="false"
            android:scaleType="fitCenter"
            android:src="@drawable/facebook_login" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView4"
            android:layout_alignBottom="@+id/textView4"
            android:layout_alignLeft="@+id/profile"
            android:layout_alignStart="@+id/profile"
            android:text="23" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView5"
            android:layout_toEndOf="@+id/textView9"
            android:layout_toRightOf="@+id/textView9"
            android:text="180cm" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView6"
            android:layout_alignBottom="@+id/textView6"
            android:layout_alignLeft="@+id/textView9"
            android:layout_alignStart="@+id/textView9"
            android:text="75kg" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/imageButton"
            android:layout_alignStart="@+id/imageButton"
            android:layout_alignTop="@+id/textView7"
            android:text="1m" />

        <!--<com.facebook.login.widget.LoginButton
            android:id="@+id/login_button"
            android:layout_marginLeft="190dp"
            android:layout_marginTop="460dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>-->

    </RelativeLayout>

</FrameLayout>
